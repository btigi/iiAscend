<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>ii.Ascend</RootNamespace>
    <AssemblyName>ii.Ascend</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <Copyright>Copyright ©  2026</Copyright>
    <Title>ii.Ascend</Title>
    <Version>0.4.0.0</Version>
    <Authors>iggti</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/btigi/iiAscend/</RepositoryUrl>
    <Description>C# library supporting the modification of files relating to Descent (1995) and Descent 2 (1996), the six-degree-of-freedom games developed by Parallax Software.</Description>
    <PackageTags>descent;parallax software</PackageTags>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>